<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollwid"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <HorizontalScrollView
        android:id="@+id/scrollhoz"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <TextView android:text="@string/tut" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tut" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="39dp"
        android:src="@drawable/pendroid"
        android:contentDescription="@string/pendroid"
        android:layout_marginLeft="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/blackdroid"
            android:layout_marginTop="42dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/imageView" />

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/fixeddroid"
            android:contentDescription="@string/guts"
        android:layout_gravity="top"
            android:layout_marginStart="84dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            android:layout_above="@+id/imageView3" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toEndOf="@+id/tut"
            android:layout_marginStart="250dp"
            android:layout_marginTop="68dp"
            android:src="@drawable/andcross" />

    </RelativeLayout>

</HorizontalScrollView></ScrollView>